  "bugs": {
    "url": "https://github.com/Deepesh316/nodejs-ci-cd-azureDev/issues"
  },
  "homepage": "https://github.com/Deepesh316/nodejs-ci-cd-azureDev#readme",
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "jest": "^25.2.3",
    "jest-junit": "^10.0.0",
    "ts-jest": "^25.2.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
