    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-joi-validation": "^4.0.3",
    "helmet": "^3.22.0",
    "http-errors": "^1.7.3",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.6",
    "swagger-ui-express": "^4.1.4"
  }
