{
  "name": "cicd-azuredev",
  "version": "1.0.0",
  "description": "CI/CD for Nodejs application using Azure DevOps",
  "main": "src/server.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "dev": "ts-node-dev --respawn --no-notify --transpileOnly src/server.ts",
    "serve": "node dist/src/server.js",
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "test": "nyc ts-mocha ./src/**/*.test.ts --timeout 60000 --reporter=html --reporter mocha-junit-reporter --exit ",
    "test:debug": "nyc --reporter=text --timeout 60000 --reporter=html ts-mocha ./src/**/*.test.ts --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Deepesh316/nodejs-ci-cd-azureDev.git"
  },
  "keywords": [
    "CICD",
    "Jenkins",
    "Node.js",
    "Pipeline"
  ],
  "author": "Deepesh Kumar R <deepeshkumar6080@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Deepesh316/nodejs-ci-cd-azureDev/issues"
  },
  "homepage": "https://github.com/Deepesh316/nodejs-ci-cd-azureDev#readme",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/mocha": "^7.0.2",
    "@types/sinon": "^7.5.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^7.1.1",
    "mocha-junit-reporter": "^1.23.3",
    "mongodb-memory-server": "^6.5.0",
    "nyc": "^15.0.0",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "ts-mocha": "^7.0.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-joi-validation": "^4.0.3",
    "helmet": "^3.22.0",
    "http-errors": "^1.7.3",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.6",
    "swagger-ui-express": "^4.1.4"
  }
}
